<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="Base.AppTheme" parent="AppCompatTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="AppCompatTheme.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="subtitleTextAppearance">@style/Subtitle_App</item>
    </style>

    <style name="Subtitle_App" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <!-- your code here -->
        <item name="android:textColor">@color/primary_light</item>
    </style>

</resources>
